<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homepage"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/rectangle_10_1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/addressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Твой дом "
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="66dp"
            android:layout_height="62dp"
            android:layout_marginLeft="250dp"
            android:background="@drawable/settingsbutton" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@drawable/rectangle_10_1"
        android:orientation="horizontal">
        <Button
            android:layout_marginTop="22dp"
            android:id="@+id/roomsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Комнаты"
            android:backgroundTint="#2A2A37"/>

        <Button
            android:layout_marginTop="22dp"
            android:id="@+id/devicesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Устройства"
            android:backgroundTint="#2A2A37"/>

        <Button
            android:layout_marginTop="22dp"
            android:id="@+id/usersButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Пользователи"
            android:backgroundTint="#2A2A37"/>
    </LinearLayout>


    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="501dp" />

    <ImageButton
        android:id="@+id/addRoomButton"
        android:layout_width="76dp"
        android:layout_height="74dp"
        android:layout_gravity="right"
        android:layout_marginRight="12dp"
        android:background="@drawable/addbuttonplus"
        android:text="Добавить комнату" />

</LinearLayout>